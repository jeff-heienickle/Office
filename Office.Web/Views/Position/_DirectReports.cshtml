@model ICollection<Office.Core.Entities.Spot>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

    <div class="panel panel-default">
        <div class="panel-heading">
            <div>Has @Model.Count() Direct reports</div>


            @foreach (var item in Model)
            {

                <div class="card m-2" style="width: 18rem;">
                    @if (item.Image != null)
                    {
                        <img alt="@item.Name" style="height:200px;" src="@string.Format("data:image/*;base64,{0}", Convert.ToBase64String(item.Image))" />
                    }
                    else
                    {
                        <span>no image</span>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Title - @item.Name</h5>
                        <p class="card-text">Team Memeber.</p>
                    </div>

                    <div class="card-body">

                        <a class="card-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="card-link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>

            }

        </div>
